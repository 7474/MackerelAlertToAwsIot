<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Amazon.CDK.AWS.IoT" Version="1.22.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="3.1.1" />
    <!-- CDK Construct Library dependencies -->
    <PackageReference Include="Amazon.CDK" Version="1.22.0" />
    <PackageReference Include="Amazon.CDK.AWS.Events" Version="1.22.0" />
    <PackageReference Include="Amazon.CDK.AWS.Events.Targets" Version="1.22.0" />
    <PackageReference Include="Amazon.CDK.AWS.IAM" Version="1.90.1" />
    <PackageReference Include="Amazon.CDK.AWS.Lambda" Version="1.22.0" />
    <PackageReference Include="Amazon.CDK.AWS.Greengrass" Version="1.22.0" />

    <!-- jsii Roslyn analyzers (un-comment to obtain compile-time checks for missing required props
    -->
    <PackageReference Include="Amazon.Jsii.Analyzers" Version="0.21.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Update="config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
